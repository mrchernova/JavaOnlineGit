char [][] charSmatrix = new char[n][n];
    initMatrixS(charSmatrix, charS, n);
printMatrixS(charSmatrix);

    }



    public static void initMatrixS(char[][] charSmatrix, char[] charS, int n) {

        for (int i = 0; i < n; i++) {
            for (int j = 0; j < n; j++) {

                charSmatrix[i][j] = charS[i];
            }
        }
    }

    public static void printMatrixS(char[][] charSmatrix) {

        for (int i = 0; i < charSmatrix.length; i++) {
            for (int j = 0; j < charSmatrix[i].length; j++) {

                System.out.print(charSmatrix[i][j] + " ");
            }
            System.out.println();

        }
    }



}
